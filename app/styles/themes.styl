@import 'mixins.styl'

#environment
  .toolbar
    .button
      div
        &.play
          background-image: url('../assets/ui/themes/default/play.png')
        &.pause
          background-image: url('../assets/ui/themes/default/pause.png')
        &.reset
          background-image: url('../assets/ui/themes/default/reset.png')
        &.carry-tool
          background-image: url('../assets/ui/themes/default/carry-plant.png')
        &.info-tool
          background-image: url('../assets/ui/themes/default/info-tool.png')
      &.no-button
        div.no-sign
          background-image: url('../assets/ui/themes/default/no.png')

#environment.flat
  background-image: url('../assets/ui/themes/flat/triangular-pattern.png')
  background-size: 10%
  border: 1px solid #DDD
  .toolbar
    background-color: rgba(0,0,0,0)
    .button
      border: 3px solid #00a2de
      box-shadow(0, 0, 0px)
      padding: 3px
      background-linear-gradient(top, #ffffff, 0%, #ffffff, 100%)
      &:active
        background-linear-gradient(top, #ffffff, 0%, #f2f2f2, 100%)
      &:hover
        box-shadow(0, 0, 5px, #AAA)
        background-linear-gradient(top, #fcfcfc, 0%, #fcfcfc, 100%)
      div
        &.play
          background-image: url('../assets/ui/themes/flat/play.png')
        &.pause
          background-image: url('../assets/ui/themes/flat/pause.png')
        &.reset
          background-image: url('../assets/ui/themes/flat/reset.png')
        &.carry-tool
          background-image: url('../assets/ui/themes/flat/carry-plant.png')
        &.info-tool
          background-image: url('../assets/ui/themes/flat/info-tool.png')
      &.no-button
        div.no-sign
          background-image: url('../assets/ui/themes/flat/no.png')
      &.modal-active
        box-shadow(inset, 0, 0, 5px, #333)
        background-linear-gradient(top, #ffffff, 0%, #fafafa, 100%)
