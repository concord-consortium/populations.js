.pp-slider
  position: relative
  width: 150px
  left: 10px
  vendor('user-select', 'none')
  height: 30px
  &.noTooltip
    height: 13px

  .pp-slider-scale
    background-color: #aaa
    height: 1px
    border-bottom: 1px solid #efefef
    width: 120px
    margin-top: 6px
    float: left

    .pp-slider-button
      width: 12px
      border-radius: 2px
      border: 1px solid #adadad
      height: 16px
      position: relative
      top: -7px
      left: 0px
      background-color: #efefef
      cursor: pointer

    &:hover
      border-color: #777
      background-color: #eee

      .pp-slider-divies
        border-left: 1px solid #adadad
        border-right: 1px solid #adadad
        position: relative
        left: 3px
        top: 3px
        width: 4px
        height: 10px

    .pp-slider-tooltip
      width: 24px
      height: 20px
      position: relative
      top: -5px
      left: 0px
      text-align: center
      font-size: 10px
      color: #aaa

  .pp-slider-min
    float: left
    width: 15px
    color: #aaa
    font-size: 10px

  .pp-slider-max
    float: left
    width: 15px
    color: #aaa
    font-size: 10px
    text-align: right
