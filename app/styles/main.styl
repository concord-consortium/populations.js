@import 'mixins.styl'

body
  background-color: white

#environment
  display: inline-block
  overflow: auto
  padding: 10px

  canvas
    float: left

  .toolbar
    cursor: default
    float: left
    background-color: #DDD


    .button
      width: 52px
      height: 52px
      padding: 5px
      margin: 3px
      cursor: pointer
      border-radius(7px)
      box-shadow(0, 0, 5px)
      background-linear-gradient(top, #ffffff, 0%, #cccccc, 100%)

      &:hover
        box-shadow(0, 0, 5px, #444)

      &:active
        box-shadow(0, 0, 5px, #FFF)
        background-linear-gradient(top, #ffffff, 0%, #bbbbbb, 100%)

      img
        width: 100%
        height: 100%

        &:active
          margin: -1px -1px

      div
        width: 100%
        height: 100%
        background-repeat:no-repeat
        background-position: 3px 3px

        &:active
          background-position: 2px 2px

        &.play
          background-image: url('../ui/play.png')
        &.pause
          background-image: url('../ui/pause.png')
        &.reset
          background-image: url('../ui/reset.png')

      &.modal:active
      &.modal-active
        box-shadow(inset, 0, 0, 5px, #333)
        background-linear-gradient(top, #bbbbbb, 0%, #777777, 100%)

        img
          margin: -1px -1px


#environment
  .add-agents
    cursor: copy
  .info-tool
    cursor: -webkit-zoom-in
    cursor: -moz-zoom-in
    cursor: zoom-in
  .carry-tool
    cursor: url("data:image/gif;base64,") 10 20, auto

#chart
  display: inline-block
  width: 400px
  height: 400px
